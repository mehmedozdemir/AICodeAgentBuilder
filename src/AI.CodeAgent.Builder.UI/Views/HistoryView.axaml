<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:AI.CodeAgent.Builder.UI.ViewModels"
             xmlns:enums="using:AI.CodeAgent.Builder.Domain.Enums"
             x:Class="AI.CodeAgent.Builder.UI.Views.HistoryView"
             x:DataType="vm:HistoryViewModel">

    <Design.DataContext>
        <vm:HistoryViewModel />
    </Design.DataContext>

    <UserControl.Styles>
        <Style Selector="Button.action-button">
            <Setter Property="Background" Value="#2563eb"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.action-button:pointerover">
            <Setter Property="Background" Value="#1d4ed8"/>
        </Style>

        <Style Selector="ListBox.history-list">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#e2e8f0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
    </UserControl.Styles>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="AI Generation History"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#1e293b"/>
                    <TextBlock Text="Browse AI prompts, responses, and audit trail"
                               FontSize="14"
                               Foreground="#64748b"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Classes="action-button"
                        Command="{Binding LoadDataCommand}"
                        IsEnabled="{Binding !IsLoading}"
                        VerticalAlignment="Center">
                    <TextBlock Text="ðŸ”„ Reload"/>
                </Button>
            </Grid>

            <!-- Filters -->
            <Border Grid.Row="1"
                    Background="White"
                    BorderBrush="#e2e8f0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="15"
                    Margin="0,15,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Filter by Status:"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"
                               FontWeight="SemiBold"/>
                    <ComboBox SelectedItem="{Binding StatusFilter}"
                              MinWidth="150">
                        <ComboBoxItem Content="Pending" />
                        <ComboBoxItem Content="Validated" />
                        <ComboBoxItem Content="Rejected" />
                    </ComboBox>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Loading Indicator -->
        <Border Grid.Row="1"
                Background="#f1f5f9"
                CornerRadius="8"
                Padding="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsVisible="{Binding IsLoading}">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="â³ Loading history..."
                           FontSize="18"
                           Foreground="#64748b"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" IsVisible="{Binding !IsLoading}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Response List -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="{Binding Responses.Count, StringFormat='AI Responses ({0})'}"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#1e293b"
                           Margin="0,0,0,10"/>

                <ListBox Grid.Row="1"
                         Classes="history-list"
                         ItemsSource="{Binding Responses}"
                         SelectedItem="{Binding SelectedResponse}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="10">
                                <TextBlock Text="{Binding RequestContext}"
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           Foreground="#1e293b"
                                           TextWrapping="Wrap"/>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <Border Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                            CornerRadius="4"
                                            Padding="6,2">
                                        <TextBlock Text="{Binding Status}"
                                                   FontSize="11"
                                                   Foreground="White"/>
                                    </Border>
                                    <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}"
                                               FontSize="12"
                                               Foreground="#64748b"
                                               Margin="10,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>

            <!-- Response Details -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Response Details"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#1e293b"
                           Margin="0,0,0,10"/>

                <Border Grid.Row="1"
                        Background="White"
                        BorderBrush="#e2e8f0"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        IsVisible="{Binding SelectedResponse, Converter={x:Static ObjectConverters.IsNotNull}}">
                    <ScrollViewer>
                        <StackPanel>
                            <!-- Context -->
                            <TextBlock Text="Request Context"
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Margin="0,0,0,5"/>
                            <TextBox Text="{Binding SelectedResponse.RequestContext}"
                                     IsReadOnly="True"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinHeight="60"
                                     Margin="0,0,0,15"/>

                            <!-- Prompt -->
                            <TextBlock Text="AI Prompt"
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Margin="0,0,0,5"/>
                            <TextBox Text="{Binding SelectedResponse.Prompt}"
                                     IsReadOnly="True"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     FontFamily="Consolas,Courier New,monospace"
                                     FontSize="12"
                                     MinHeight="150"
                                     Margin="0,0,0,15"/>

                            <!-- Response -->
                            <TextBlock Text="AI Response"
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Margin="0,0,0,5"/>
                            <TextBox Text="{Binding SelectedResponse.RawResponse}"
                                     IsReadOnly="True"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     FontFamily="Consolas,Courier New,monospace"
                                     FontSize="12"
                                     MinHeight="200"
                                     Margin="0,0,0,15"/>

                            <!-- Metadata -->
                            <Border Background="#f8fafc"
                                    BorderBrush="#e2e8f0"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="15">
                                <StackPanel>
                                    <TextBlock Text="Metadata"
                                               FontWeight="SemiBold"
                                               FontSize="14"
                                               Margin="0,0,0,10"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Text="Status:"
                                                   FontWeight="SemiBold"
                                                   Margin="0,5,15,5"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1"
                                                   Text="{Binding SelectedResponse.Status}"
                                                   Margin="0,5"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0"
                                                   Text="Created:"
                                                   FontWeight="SemiBold"
                                                   Margin="0,5,15,5"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1"
                                                   Text="{Binding SelectedResponse.CreatedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}"
                                                   Margin="0,5"/>

                                        <TextBlock Grid.Row="3" Grid.Column="0"
                                                   Text="ID:"
                                                   FontWeight="SemiBold"
                                                   Margin="0,5,15,5"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1"
                                                   Text="{Binding SelectedResponse.Id}"
                                                   Margin="0,5"
                                                   FontFamily="Consolas,Courier New,monospace"
                                                   FontSize="11"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Empty State -->
                <Border Grid.Row="1"
                        Background="#f8fafc"
                        BorderBrush="#e2e8f0"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="40"
                        IsVisible="{Binding SelectedResponse, Converter={x:Static ObjectConverters.IsNull}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“‹"
                                   FontSize="48"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="Select a response to view details"
                                   FontSize="16"
                                   Foreground="#64748b"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
